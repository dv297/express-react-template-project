{
  "name": "express-react-template-project",
  "version": "1.0.0",
  "description": "Template for scaffolding an Express and React project",
  "main": "index.js",
  "scripts": {
    "build": "cd client && npm run build",
    "start": "node server.js",
    "dev": "npm-run-all --parallel dev:server dev:client",
    "dev:server": "nodemon server.js",
    "dev:client": "cd client && npm run start",
    "prettier": "prettier --config ./prettier.config.js --write \"./**/*.js?(x)\" \"./**/*.md\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dv297/express-react-template-project.git"
  },
  "author": "Daniel Vu",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dv297/express-react-template-project/issues"
  },
  "homepage": "https://github.com/dv297/express-react-template-project#readme",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1"
  }
}
